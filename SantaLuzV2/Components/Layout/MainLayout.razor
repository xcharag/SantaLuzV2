@inherits LayoutComponentBase

<FluentLayout Class="theme-dark">
    <FluentHeader>
        Grupo Inmobiliario Santa Luz
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu/>
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://microcom-ti.com" target="_blank">® MICROCOM - Todos los derechos reservados</a>
        <FluentSpacer/>
    </FluentFooter>
</FluentLayout>

